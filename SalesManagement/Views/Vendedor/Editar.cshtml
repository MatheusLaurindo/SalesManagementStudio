@model Vendedor

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <h2 class="mt-3">Editar Vendedor</h2>
    </div>
    <form asp-controller="Vendedor" asp-action="Editar" method="post">
        <div class="mb-3 col-md-6">
            <label class="form-label">Nome Completo</label>
            <input asp-for="Nome" type="text" class="form-control" value="@Model.Nome">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Documento</label>
            <input asp-for="Documento" type="number" class="form-control" value="@Model.Documento">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Data de Nascimento</label>
            <input asp-for="DataNascimento" type="text" class="form-control" value="@Model.DataNascimento">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Salário</label>
            <input asp-for="Salario" type="text" class="form-control" value="@Model.Salario">
        </div>
        <input type="hidden" asp-for="@Model.IdVendedor" value="@Model.IdVendedor" />
        <button type="submit" class="btn btn-success">Editar</button>
    </form>
</div>