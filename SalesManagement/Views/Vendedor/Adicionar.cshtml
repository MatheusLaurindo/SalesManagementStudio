@model Vendedor

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <h2 class="mt-3">Adicionar Vendedor</h2>
    </div>
    <form asp-controller="Vendedor" asp-action="Adicionar" method="post">
        <div class="mb-3 col-md-6">
            <label class="form-label">Nome Completo</label>
            <input asp-for="Nome" type="text" class="form-control">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Documento</label>
            <input asp-for="Documento" type="text" class="form-control">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Data de Nascimento</label>
            <input asp-for="DataNascimento" type="date" class="form-control">
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label">Salário</label>
            <input asp-for="Salario" type="text" class="form-control" value="0">
        </div>
        <button type="submit" class="btn btn-success">Adicionar</button>
    </form>
</div>