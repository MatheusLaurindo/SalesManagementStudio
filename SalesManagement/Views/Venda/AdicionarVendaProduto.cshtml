@model VendaProduto

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <h2 class="mt-3">Escolher Produto</h2>
    </div>
    <form>
        <div class="mb-4 col-md-6">
            <label class="mt-3">Nome do produto</label>
            @Html.DropDownList("ProdutoId", (IEnumerable<SelectListItem>) ViewBag.Produtos, "Selecione o produto", new {@class = "form-control mt-1", id = "ProdutoId"})
        </div>
        <div class="mb-4 col-md-6">
            <input type="number" class="form-control" placeholder="Quantidade" />
        </div>
        <button type="submit" class="btn btn-success">Adicionar</button>
    </form>
</div>