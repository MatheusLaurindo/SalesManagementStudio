@model IEnumerable<Venda>

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <h2 class="mt-3">Relatório de Vendas</h2>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped mt-2">
            <tr class="bg-primary">
                <th class="text-light">Vendedor</th>
                <th class="text-light">Produto</th>
                <th class="text-light">Quantidade</th>
                <th class="text-light">Total</th>
                <th class="text-light">Comissão</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr id="linhaTbl">
                    <td>@item.Vendedor.Nome</td>
                    <td>@item.Produto.Nome</td>
                    <td>@item.Quantidade</td>
                    <td>@item.Total</td>
                    <td>@item.Comissao</td>
                    <td></td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="container d-flex justify-content-center mt-5" style="border-bottom: 1px solid #2C3E50">
            <p>Nenhum venda para relatar.</p>
        </div>
    }
</div>
