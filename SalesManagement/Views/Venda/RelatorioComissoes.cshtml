@model List<Venda>

<div class="container">
    <div class="row mt-3">
        <div class="col-md-6">
            <h2 class="mt-3">Relatório de Comissões</h2>
            <form asp-controller="Venda" asp-action="RelatorioComissoes" method="post">
                <label class="mt-3">Nome do Vendedor</label>
                @Html.DropDownList("VendedorId", (IEnumerable<SelectListItem>) ViewBag.Vendedores, "Selecione o vendedor", new {@class = "form-control mt-1", id = "IdVendedor"})
                <button type="submit" class="btn btn-primary mt-4">Filtrar</button>
            </form>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped mt-4">
            <tr class="bg-primary">
                <th class="text-light">Vendedor</th>
                <th class="text-light">Comissão</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr id="linhaTbl">
                    <td>@item.Vendedor.Nome</td>
                    <td>@item.Comissao</td>
                    <td></td>
                </tr>
            }
        </table>
    }
</div>