@model Produto

<div class="container">
    <div class="col-md-md mt-3">
        <img src="@Model.ImagemUrl" width="500px" />
        <h3 class="mt-5">@Model.Nome</h3>
        <h4>@Model.Preco</h4>
        <h5>@Model.Descrição</h5>
    </div>
    <div class="mt-5">
        <a class="btn btn-danger" asp-action="Deletar" asp-controller="Produto" asp-route-id="@Model.IdProduto">Deletar produto</a>
        <a class="btn btn-primary ms-3" asp-action="Editar" asp-controller="Produto" asp-route-id="@Model.IdProduto">Editar</a>
    </div>
</div>